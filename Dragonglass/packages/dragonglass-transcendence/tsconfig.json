{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "DOM"
        ],
        "strict": false,
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
