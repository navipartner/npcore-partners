{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "tsc",
            "args": ["--watch"],
            "type": "shell",
            "label": "tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}